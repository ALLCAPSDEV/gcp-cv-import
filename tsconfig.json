{
  "compilerOptions": {
    "target": "es6",
    "module": "ES2015",
    "lib": ["es6", "es2015"],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "ignoreDeprecations": "5.0"
  },
  "include": ["src"],
  "exclude": ["node_modules", "__test__"]
}
