{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "es2015", "dom"],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "resolveJsonModule": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": ["node_modules", "__test__"]
}
